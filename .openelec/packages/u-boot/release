. config/options $1

if [ -z "$UBOOT_CONFIGFILE" ]; then
  UBOOT_CONFIGFILE="boot.ini"
fi

# generate uInitrd
  $SCRIPTS/install initramfs
  mkdir -p $RELEASE_DIR/target
    mkimage -A $TARGET_KERNEL_ARCH -T ramdisk -n RootFS\ [$PROJECT] -C none -d $INSTALL/../initramfs.cpio \
      $RELEASE_DIR/target/INITRD
  ( cd $RELEASE_DIR ; md5sum -t target/INITRD > target/INITRD.md5; )


mkdir -p $RELEASE_DIR/3rdparty/bootloader
  if [ -e $BUILD/u-boot-*/$UBOOT_CONFIGFILE ]; then
    cp -PR $BUILD/u-boot-*/$UBOOT_CONFIGFILE $RELEASE_DIR/3rdparty/bootloader
  fi

  for blob in $INSTALL/usr/share/bootloader/* ; do
    cp -PR $blob $RELEASE_DIR/3rdparty/bootloader 2>/dev/null
  done

  for dtb in $BUILD/linux-*/arch/$TARGET_KERNEL_ARCH/boot/dts/*.dtb; do
    cp -PR $dtb $RELEASE_DIR/3rdparty/bootloader 2>/dev/null || :
  done

  if [ -d "$ROOT/.openelec/projects/$PROJECT/bootloader" ]; then
    cp -PR $ROOT/.openelec/projects/$PROJECT/bootloader/* $RELEASE_DIR/3rdparty/bootloader
  fi
